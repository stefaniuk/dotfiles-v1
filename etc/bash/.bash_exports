#!/bin/sh

# these variables are updated during the installation
export DOTFILES_DIR=~
export USER_NAME="unknown"
export USER_EMAIL="unknown"
export GITHUB_ACCOUNT="unknown" # your GitHub account name
export GITLAB_ACCOUNT="unknown" # your GitLab account name

# tell `git` who you are
export GIT_AUTHOR_NAME="$USER_NAME"
export GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
export GIT_AUTHOR_EMAIL="$USER_EMAIL"
export GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

# make `vim` or `vi` the default editor
export EDITOR=$(which vim 2> /dev/null || which vi 2> /dev/null)

# tell `ls` to be colourful
export CLICOLOR=1
export LS_COLORS="no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35"

# bash history
shopt -s histappend # append history when closing multiple shells
shopt -s cmdhist    # keep multi line commands together
export HISTSIZE=4096
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups:erasedups
export HISTIGNORE="history*:pwd:ll:la:ls:lsd:cd ~:cd -:date:clear:exit"
export PROMPT_COMMAND="prompt_command; history -n; history -w; history -c; history -r"

# prefer British English
export LANG="en_GB.UTF-8"
export LC_ALL="en_GB.UTF-8"

# highlight section titles in manual pages
export LESS_TERMCAP_mb="${red}"
export LESS_TERMCAP_md="${blue}"
export LESS_TERMCAP_me="${reset}"
export LESS_TERMCAP_se="${reset}"
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue="${reset}"
export LESS_TERMCAP_us="${yellow}"

# don't clear the screen after quitting a manual page
export MANPAGER="less -X"
