#!/bin/bash

# ### Mac OS X #################################################################

function macosx-install-developer-bundle {

    $brew_install \
        byobu \
        git-flow \
        gpg2 \
        gtypist \
        zsh
    run_install \
        github \
        iterm
}

function macosx-config-developer-bundle {

    run_config \
        iterm
}

# ### Ubuntu ###################################################################

function ubuntu-install-developer-bundle {

    $apt_get_install \
        byobu \
        git-flow \
        gpgv2 \
        gtypist \
        nfs-kernel-server \
        zsh
}

# ### common ###################################################################

function install-developer-bundle {

    run_install \
        ant \
        atom \
        chrome \
        directory \
        docker \
        emacs \
        go \
        gradle \
        groovy \
        irssi \
        java \
        maven \
        node \
        node-packages \
        packer \
        scala \
        smartgit \
        subl \
        tmux \
        vagrant \
        virtualbox \
        vscode
}

function config-developer-bundle {

    run_config \
        ant \
        atom \
        docker \
        git \
        go \
        gradle \
        groovy \
        irssi \
        java \
        maven \
        node \
        node-packages \
        packer \
        scala \
        smartgit \
        subl \
        tmux \
        vagrant \
        virtualbox \
        vscode
}
