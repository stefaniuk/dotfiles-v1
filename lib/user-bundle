#!/bin/bash

# ### Mac OS X #################################################################

function macosx-install-user-bundle {

    $brew_install \
        pandoc

    run_install \
        boxcryptor \
        dropbox \
        megasync
}

function macosx-config-user-bundle {

    :
}

# ### Ubuntu ###################################################################

function ubuntu-install-user-bundle {

    $apt_get_install \
        pandoc

    run_install \
        boxcryptor \
        dropbox \
        megasync
}

function ubuntu-config-user-bundle {

    :
}
