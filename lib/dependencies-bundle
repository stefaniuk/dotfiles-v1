#!/bin/bash

# ### Mac OS X #################################################################

function macosx-install-dependencies-bundle {

    $brew_install \
        bc \
        binutils \
        curl \
        expect \
        git \
        openssl \
        pcre \
        perl \
        python3 \
        rsync \
        unzip \
        wget \
        xz
    sudo easy_install \
        Pygments
}

# ### Ubuntu ###################################################################

function ubuntu-install-dependencies-bundle {

    $apt_get_install \
        bc \
        binutils \
        curl \
        expect \
        git \
        openssl \
        pcregrep \
        perl \
        python \
        python-pygments \
        rsync \
        unzip \
        wget \
        xz-utils
}

# ### common ###################################################################

function config-dependencies-bundle {

    run_config \
        git
}
