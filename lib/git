#!/bin/bash

# ### Mac OS X #################################################################

function macosx-install-git {

    $brew_install git
}

# ### Ubuntu ###################################################################

function ubuntu-install-git {

    $apt_get_install git
}

# ### common ###################################################################

function config-git {

    git config --global user.name "$USER_NAME"
    git config --global user.email "$USER_EMAIL"
}
