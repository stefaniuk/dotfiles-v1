PROJECT := name
ENVIRONMENT := local
DOMAIN := localhost

help:
	@echo
	@echo "Usage:"
	@echo
	@echo "    make all [NAME=name] [ENVIRONMENT=environment] [DOMAIN=domain]"
	@echo "    make build [NAME=name] [ENVIRONMENT=environment] [DOMAIN=domain]"
	@echo "    make start|stop [ENVIRONMENT=environment]"
	@echo "    make log [NAME=name]  [ENVIRONMENT=environment]"
	@echo "    make bash NAME=name"
	@echo "    make clean|remove [NAME=name]"
	@echo "    make export-image|import-image|validate-image-archive NAME=name"
	@echo "    make export-project|validate-project-archive"
	@echo

all: clean build start
build:
	@if [ "$(NAME)" = "" ]; then \
		make build NAME=name ENVIRONMENT=$(ENVIRONMENT) DOMAIN=$(DOMAIN); \
	else \
		echo "Building '$(PROJECT)/$(NAME)' image..."; \
		docker build \
			--build-arg ENVIRONMENT=$(ENVIRONMENT) \
			--build-arg DOMAIN=$(DOMAIN) \
			--tag pathwaysdos/$(NAME) \
			--rm docker/$(ENVIRONMENT)/$(NAME); \
	fi
start:
	@echo "Starting all containers..."
	@docker-compose --file docker-compose.$(ENVIRONMENT).yml up --no-build --no-recreate -d
stop:
	@echo "Stopping all containers..."
	@docker-compose --file docker-compose.$(ENVIRONMENT).yml stop
log:
	@echo "Logging output..."
	@if [ "$(NAME)" = "" ]; then \
		docker-compose --file docker-compose.$(ENVIRONMENT).yml logs; \
	else \
		docker logs --follow $(NAME); \
	fi
bash:
	@echo "Bashing into '$(NAME)' container..."
	@docker exec --interactive --tty $(NAME) /bin/bash --login
clean:
	@if [ "$(NAME)" = "" ]; then \
		make clean NAME=name; \
	else \
		echo "Removing '$(NAME)' container..."; \
		docker stop $(NAME) > /dev/null 2>&1 ||:; \
		docker rm $(NAME) > /dev/null 2>&1 ||:; \
	fi
remove:
	@if [ "$(NAME)" = "" ]; then \
		make remove NAME=name; \
	else \
		make clean NAME=$(NAME); \
		echo "Removing '$(PROJECT)/$(NAME)' image..."; \
		docker rmi $(PROJECT)/$(NAME) > /dev/null 2>&1 ||:; \
	fi

export-image:
	@echo "Exporting '$(PROJECT)/$(NAME)' image..."
	@docker save $(PROJECT)/$(NAME) | gzip -1 > dist/$(PROJECT)-$(NAME).tar.gz
	@cd dist; sha256sum $(PROJECT)-$(NAME).tar.gz > $(PROJECT)-$(NAME).tar.gz.sha256
import-image:
	@echo "Importing '$(PROJECT)/$(NAME)' image..."
	@gunzip -c dist/$(PROJECT)-$(NAME).tar.gz | docker load
validate-image-archive:
	@echo "Validating '$(PROJECT)/$(NAME)' image archive..."
	@cd dist; sha256sum -c $(PROJECT)-$(NAME).tar.gz.sha256

export-project:
	@echo "Exporting project..."
	@git archive --format=tar.gz --prefix=$(PROJECT)/ HEAD > dist/$(PROJECT).tar.gz
	@cd dist; sha256sum $(PROJECT).tar.gz > $(PROJECT).tar.gz.sha256
validate-project-archive:
	@echo "Validating project archive..."
	@cd dist; sha256sum -c $(PROJECT).tar.gz.sha256

.PHONY: log
.SILENT:
